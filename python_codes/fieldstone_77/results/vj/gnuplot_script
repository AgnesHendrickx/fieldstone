0.777615791 lt -1 


set log y

set title 'formulation 1'
set ylabel 'v_{rms} (rel. error)'
set output 'vrms_form1_relerror.pdf'
plot[][1e-6:]\
'vrms_sft1_form1.ascii' u (1./sqrt($3)):($7/0.777615791-1) w lp lt 1 pt 1 t 'RT(MP)',\
'vrms_sft2_form1.ascii' u (1./sqrt($3)):($7/0.777615791-1) w lp lt 2 pt 1 t 'RT(MV)',\
'vrms_sft3_form1.ascii' u (1./sqrt($3)):($7/0.777615791-1) w lp lt 3 pt 1 t 'DSSY(1)',\
'vrms_sft4_form1.ascii' u (1./sqrt($3)):($7/0.777615791-1) w lp lt 4 pt 1 t 'DSSY(2)',\
x**2/5. w l lt -1 dashtype 2 t 'x^2'

