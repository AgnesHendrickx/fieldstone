0.777615791 lt -1 


set title 'formulation 2'
unset log y
set ylabel 'v_{rms}'
set output 'vrms_form2.pdf'
plot[][]\
'vrms_sft1_form2.ascii' u (1./sqrt($3)):7 w lp lt 1 pt 1 t 'RT(MP)',\
'vrms_sft2_form2.ascii' u (1./sqrt($3)):7 w lp lt 2 pt 1 t 'RT(MV)',\
