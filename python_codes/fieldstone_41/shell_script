#!/bin/bash

python3 stone.py -3
mv profileq.ascii profileq_m3.ascii
mv profilec.ascii profilec_m3.ascii
cat mass.ascii >> mass_all.ascii
cat vrms.ascii >> vrms_all.ascii

python3 stone.py -2
mv profileq.ascii profileq_m2.ascii
mv profilec.ascii profilec_m2.ascii
cat mass.ascii >> mass_all.ascii
cat vrms.ascii >> vrms_all.ascii

python3 stone.py -1
mv profileq.ascii profileq_m1.ascii
mv profilec.ascii profilec_m1.ascii
cat mass.ascii >> mass_all.ascii
cat vrms.ascii >> vrms_all.ascii

python3 stone.py  1
mv profileq.ascii profileq_p1.ascii
mv profilec.ascii profilec_p1.ascii
cat mass.ascii >> mass_all.ascii
cat vrms.ascii >> vrms_all.ascii

python3 stone.py  2
mv profileq.ascii profileq_p2.ascii
mv profilec.ascii profilec_p2.ascii
cat mass.ascii >> mass_all.ascii
cat vrms.ascii >> vrms_all.ascii

python3 stone.py  3
mv profileq.ascii profileq_p3.ascii
mv profilec.ascii profilec_p3.ascii
cat mass.ascii >> mass_all.ascii
cat vrms.ascii >> vrms_all.ascii

python3 stone.py  4
mv profileq.ascii profileq_p4.ascii
mv profilec.ascii profilec_p4.ascii
cat mass.ascii >> mass_all.ascii
cat vrms.ascii >> vrms_all.ascii
