set log x
set xlabel 'h'
set ylabel 'v_{rms} (x10^{-6})'
set output 'vrms.pdf'
plot[][3:]\
'errors_1' u (($3)):($12*1e6) w lp ps .25 t 'MINI',\
'errors_2' u (($3)):($12*1e6) w lp ps .25 t 'C-R',\
'errors_3' u (($3)):($12*1e6) w lp ps .25 t 'P_2P_1',\
'errors_4' u (($3)):($12*1e6) w lp ps .25 t 'Q_2Q_1',\
'errors_5' u (($3)):($12*1e6) w lp ps .25 t 'Q_2P_{-1}'



