set term pdf enhanced font "Times,12pt"
set grid

set style rect fc lt -1 fs solid 0.15 noborder
set obj rect from 0.5-0.0625, graph 0 to 0.5+0.0625, graph 1


set key outside
set xlabel 'y'

set ylabel 'v_x'
set output 'vprofile_u.pdf'
plot[][]\
'vprofile_MINI.ascii' u 1:2 w lp ps 0.24 t 'MINI',\
'vprofile_P2P1.ascii' u 1:2 w lp ps 0.24 t 'P2P1',\
'vprofile_CR.ascii'   u 1:2 w lp ps 0.24 t 'CR',\
'vprofile_Q2Q1.ascii' u 1:2 w lp ps 0.24 t 'Q2Q1',\
'vprofile_Q2P1.ascii' u 1:2 w lp ps 0.24 t 'Q2P1',\

set ylabel 'v_y'
set output 'vprofile_v.pdf'
plot[][]\
'vprofile_MINI.ascii' u 1:3 w lp ps 0.24 t 'MINI',\
'vprofile_P2P1.ascii' u 1:3 w lp ps 0.24 t 'P2P1',\
'vprofile_CR.ascii'   u 1:3 w lp ps 0.24 t 'CR',\
'vprofile_Q2Q1.ascii' u 1:3 w lp ps 0.24 t 'Q2Q1',\
'vprofile_Q2P1.ascii' u 1:3 w lp ps 0.24 t 'Q2P1',\

set ylabel 'pressure'
set output 'vprofile_p.pdf'
plot[][]\
'vprofile_MINI.ascii' u 1:4 w lp ps 0.24 t 'MINI',\
'vprofile_P2P1.ascii' u 1:4 w lp ps 0.24 t 'P2P1',\
'vprofile_CR.ascii'   u 1:4 w lp ps 0.24 t 'CR',\
'vprofile_Q2Q1.ascii' u 1:4 w lp ps 0.24 t 'Q2Q1',\
'vprofile_Q2P1.ascii' u 1:4 w lp ps 0.24 t 'Q2P1',\

set output 'vprofile_pdyn.pdf'
plot[][]\
'vprofile_MINI.ascii' u 1:($4-(0.5-$1)) w lp ps 0.24 t 'MINI',\
'vprofile_P2P1.ascii' u 1:($4-(0.5-$1)) w lp ps 0.24 t 'P2P1',\
'vprofile_CR.ascii'   u 1:($4-(0.5-$1)) w lp ps 0.24 t 'CR',\
'vprofile_Q2Q1.ascii' u 1:($4-(0.5-$1)) w lp ps 0.24 t 'Q2Q1',\
'vprofile_Q2P1.ascii' u 1:($4-(0.5-$1)) w lp ps 0.24 t 'Q2P1',\



