unset title


set xlabel 'u'
set key outside 
set output 'vert_u.pdf'
plot[][]\
'8x8x8/vert.ascii'    u 1:2 w lp ps .125 lw .5  t '8x8x8',\
'16x16x16/vert.ascii' u 1:2 w lp ps .125 lw .5  t '16x16x16',\
'24x24x24/vert.ascii' u 1:2 w lp ps .125 lw .5  t '24x24x24',\

set xlabel 'v'
set output 'vert_v.pdf'
