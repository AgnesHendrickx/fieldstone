set term pdf enhanced font "Times,12pt"
set grid

set xlabel 'coordinate along diagonal'


####################################################
set title '8x8x8'
set ylabel '|u|'
set output 'u_08.pdf'
plot[][:4e-6]\
'8x8x8/diag1.ascii' u 8:(abs($4)) w lp ps .125 lw .5 t 'diag1',\
'8x8x8/diag2.ascii' u 8:(abs($4)) w lp ps .125 lw .5 t 'diag2',\
'8x8x8/diag3.ascii' u 8:(abs($4)) w lp ps .125 lw .5 t 'diag3',\
'8x8x8/diag4.ascii' u 8:(abs($4)) w lp ps .125 lw .5 t 'diag4'

