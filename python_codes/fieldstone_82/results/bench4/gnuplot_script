'16x16x16/vert.ascii' u 1:5 w lp ps .125 lw .5  t '16x16x16',\
'24x24x24/vert.ascii' u 1:5 w lp ps .125 lw .5  t '24x24x24',\

set log x
set output 'averages.pdf'
set xlabel 'h'
set ylabel 'volume average'
plot[][]\
'avrg_2.ascii' u (1/$3**0.333):7 w lp ps .5 t '<u>',\
'avrg_2.ascii' u (1/$3**0.333):8 w lp ps .5 t '<v>',\
'avrg_2.ascii' u (1/$3**0.333):9 w lp ps .5 t '<w>',\

set output 'averages_abs.pdf'
set xlabel 'h'
set ylabel 'volume average'
plot[][]\
'avrg_2.ascii' u (1/$3**0.333):10 w lp ps .5 t '<|u|>',\
'avrg_2.ascii' u (1/$3**0.333):11 w lp ps .5 t '<|v|>',\
'avrg_2.ascii' u (1/$3**0.333):12 w lp ps .5 t '<|w|>',\













